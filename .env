# Modern RAG Application Environment Configuration
# Copy this file to .env and configure your settings

# ==========================================
# Application Settings
# ==========================================
APP_NAME=Modern RAG Application
APP_VERSION=1.0.0
APP_DESCRIPTION=Industry-standard RAG with modern embeddings
DEBUG=false
LOG_LEVEL=INFO

# ==========================================
# Server Configuration  
# ==========================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# ==========================================
# Model Configuration
# ==========================================
# Primary embedding model (local path)
EMBEDDING_MODEL=/Users/SA20464227/Desktop/DeskCode/responsive-web/POC/ChatBot/db-chatbot/models/all-MiniLM-L6-v2
# Alternative high-quality model: sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=100

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# ==========================================
# Processing Configuration
# ==========================================
# Memory limits (adjust for 32GB RAM)
MAX_MEMORY_GB=24
PROCESSING_BATCH_SIZE=50
MAX_CONCURRENT_DOCUMENTS=10

# Text Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
MAX_CHUNKS_PER_DOCUMENT=500

# PDF Processing
ENABLE_OCR=true
OCR_LANGUAGE=eng
PDF_DPI=300
MAX_PDF_SIZE_MB=100

# ==========================================
# Vector Database Configuration (ChromaDB)
# ==========================================
VECTOR_DB_TYPE=chromadb
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIRECTORY=./storage/chromadb
CHROMADB_COLLECTION_NAME=document_chunks

# Alternative Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=document_chunks
QDRANT_VECTOR_SIZE=384

# ==========================================
# Storage Configuration
# ==========================================
DOCUMENT_STORAGE_PATH=./storage/documents
PROCESSED_STORAGE_PATH=./storage/processed
TEMP_STORAGE_PATH=./storage/temp
BACKUP_STORAGE_PATH=./storage/backups

# File size limits
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=["pdf", "txt", "md", "docx"]

# ==========================================
# Search Configuration
# ==========================================
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
SEARCH_SCORE_THRESHOLD=0.5
ENABLE_HYBRID_SEARCH=true
KEYWORD_SEARCH_WEIGHT=0.3
SEMANTIC_SEARCH_WEIGHT=0.7

# ==========================================
# Chat/History Configuration
# ==========================================
ENABLE_CHAT_HISTORY=true
CHAT_HISTORY_LIMIT=10
MAX_CONVERSATION_LENGTH=50
CHAT_HISTORY_FILE=./storage/chat_history.json

# ==========================================
# Performance & Caching
# ==========================================
ENABLE_CACHING=false
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# Monitoring & Logging
# ==========================================
ENABLE_METRICS=false
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Health check configuration
HEALTH_CHECK_INTERVAL=30
DEPENDENCY_TIMEOUT=5

# ==========================================
# Security Settings
# ==========================================
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# Authentication (when implemented)
ENABLE_AUTH=false
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
